<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88DDBB">


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:layout_column="2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันแรกของรอบเดือน"
                android:textSize="25dp"
                android:textColor="#000000"
                android:id="@+id/msButtonS"
                android:background="#A3E7D8"
                android:padding="9dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันล่าสุดของรอบเดือน"
                android:id="@+id/msButtonE"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_column="1"
                android:background="#B9E3AE" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="#000000"
                android:background="#A3E7D8"
                android:id="@+id/msClear"
                android:layout_column="2"
                android:textSize="25dp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="แจ้งเตือนวันไข่ตก"
                android:textColor="#000000"
                android:textSize="35dp"
                android:id="@+id/msTextView"
                android:paddingLeft="12dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cSwitch1"
                android:textSize="20dp"
                android:background="#88DDBB"
                android:backgroundTint="#88DDBB"
                android:layout_gravity="center_horizontal"
                android:allowUndo="false" />
        </TableRow>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/msSave"
                    android:layout_column="17"
                    android:src="@android:drawable/checkbox_on_background"
                    android:background="#00000000"
                    android:paddingStart="250dp"
                    android:paddingTop="5dp"
                    android:textSize="30dp"
                    android:elevation="@dimen/abc_action_button_min_width_material"
                    android:paddingEnd="25dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/msDelete"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="#00000000"
                    android:paddingTop="5dp" />
            </TableRow>

        </TableLayout>


    </TableLayout>
</LinearLayout>
